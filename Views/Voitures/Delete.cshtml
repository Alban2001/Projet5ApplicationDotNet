@model Projet5ApplicationDotNet.Models.VoitureViewModel

@{
    ViewData["Title"] = "Supression";
}

<h1>Supression</h1>

<h3>Etes-vous sûr de vouloir supprimer cette voiture ?</h3>
<div class="mt-5">
    <a asp-action="Index" class="color-796157 text-decoration-underline ft-DM"><-- Retour à la liste</a>
    <div class="row align-items-center mt-5">
        <div class="col-md-6">
            <img class="w-100" src="~/uploads/@Html.DisplayFor(model => model.PhotoS)" />
        </div>
        <div class="col-md-6">
            <div class="d-flex flex-column justify-content-center">
                <h3 class="color-2C1810 mb-4">@Html.DisplayFor(model => model.PrixVente) €</h3>
                <p class="color-796157 ft-DM">@Html.DisplayFor(model => model.Annee)</p>
                <p class="color-796157 ft-DM">@Html.DisplayFor(model => model.Marque)</p>
                <p class="color-796157 ft-DM">@Html.DisplayFor(model => model.Modele)</p>
                <p class="color-796157 ft-DM">@Html.DisplayFor(model => model.Finition)</p>
            </div>
            <div class="mt-5">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdVoiture" />
                    <input type="submit" value="Supprimer" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
