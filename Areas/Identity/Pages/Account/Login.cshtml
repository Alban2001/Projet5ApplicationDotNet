@page
@model LoginModel

@{
    ViewData["Title"] = "Se connecter";
}

<a asp-action="Index" class="color-796157 text-decoration-underline ft-DM"><-- Retour à la liste</a>
<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h1 class="text-center mb-5 fw-bold color-2C1810">Express Voitures</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-4">
                    <label asp-for="Input.Email" class="form-label ft-DM color-2C1810"></label>
                    <input asp-for="Input.Email" class="form-control p-3 border-1 border-color-2C1810" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Input.Password" class="form-label ft-DM color-2C1810"></label>
                    <input asp-for="Input.Password" class="form-control p-3 border-1 border-color-2C1810" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label ft-DM">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="mb-5">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg bg-D9A963 ft-DM">Se connecter</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" class="ft-DM color-2C1810" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" class="ft-DM color-2C1810" asp-route-returnUrl="@Model.ReturnUrl">S'inscrire</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" class="ft-DM color-2C1810" asp-page="./ResendEmailConfirmation">Renvoyer un mail de confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
